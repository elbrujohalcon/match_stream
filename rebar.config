{deps, [{erldis, "\.*", {git, "git://github.com/inaka/erldis.git", "master"}},
        {socketio, "\.*", {git, "git://github.com/inaka/socketio.git", "master"}},
        {elog, "\.*", {git, "git://github.com/inaka/elog.git", "master"}}]}.
{require_otp_vsn, "R14"}.
{erl_opts, [{src_dirs, ["src", "tests"]},
            {i, "deps/elog/include"}, {i, "deps/socketio/include"}, {i, "deps/misultin/include"},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record, debug_info]}.
{xref_checks, [undefined_function_calls]}.
